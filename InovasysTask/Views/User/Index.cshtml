@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<button id="loadDataBtn" data-url="@Url.Action("LoadAllUsers", "User")" class="btn-primary">Load Data</button>
<div class="table-container">
    <table class="table table-bordered mt-3" id="usersTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Website</th>
                <th>Street</th>
                <th>Suite</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>Lat</th>
                <th>Lng</th>
                <th>Note</th>
                <th>Is Active</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</div>

<button type="button" id="saveAllBtn" class="btn btn-success mt-3" data-url="@Url.Action("SaveData", "User")">Save All</button>

<script src="/js/user.js"></script>